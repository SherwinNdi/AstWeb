---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Stats from '~/components/widgets/Stats.astro';
import CollaborationsMap from '~/components/widgets/CollaborationsMap.astro';
import Button from '~/components/ui/Button.astro';

import Brands from '~/components/widgets/Brands.astro';
import { headerData } from '~/navigation';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

const metadata = {
  title: 'Funding & Collaborations',
};
---

<Layout metadata={metadata}>
  <!-- <Fragment slot="announcement"></Fragment> -->
<!--   <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'Services', href: '#' },
        { text: 'Features', href: '#' },
        { text: 'About', href: '#' },
      ]}
      actions={[
        {
          text: 'Download',
          href: '#download',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
 -->
  <Fragment slot="header">
    <Header
      {...headerData}
      showToggleTheme
      isSticky
    />
  </Fragment>

  <!-- Funders ************* -->
 <Brands
    title="Funders and collaborators to our research"
    subtitle="We are grateful for the support of our funders and collaborators, who make our research possible."
    icons={[]}
    images={[
      {
        src: '/logos/university-helsinki.png',
        alt: 'University of Helsinki',
        href: 'https://www.helsinki.fi/en',
        width: 150,
        height: 150,
      },
      {
        src: '/logos/wihuri-foundation.png',
        alt: 'Jenny and Antti Wihuri Foundation',
        href: 'https://wihurinrahasto.fi/',
        width: 150,
        height: 150,
      },
      {
        src: '/logos/logo-fazit-stiftung.png',
        alt: 'Fazit Stiftung',
        href: 'https://www.fazit-stiftung.de/',
        width: 300,
        height: 300,
      },
 
      {
        src: '/logos/bmbf.png',
        alt: 'Bundesministerium für Bildung und Forschung (BMBF)',
        href: 'https://www.bmbf.de/en/index.html',
        width: 300,
        height: 300,
      },
      {
        src: '/logos/finnish-education.png',
        alt: 'Finnish National Agency for Education',
        href: 'https://www.oph.fi/en',
        width: 300,
        height: 300,
      },
      {
        src: '/logos/Logo_MFL.png',
        alt: 'University of Leipzig, Faculty of Medicine',
        href: 'http://www.uni-leipzig.de/nc/en/university/faculties-and-central-institutions/faculties/fakultaetdetail.html',
        width: 300,
        height: 300,
      },
      {
        src: '/logos/max-planck.png',
        alt: 'Max Planck Institute',
        href: 'https://www.cbs.mpg.de/en',
        width: 500,
        height: 500,
      },
      {
        src: '/logos/academy-finland.svg',
        alt: 'Academy of Finland',
        href: 'https://www.aka.fi/en/',
        width: 300,
        height: 300,
      },
    ]}


 />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Satistics of grant amounts we have received for our research through various funding bodies"
    stats={[
      { amount: '10 m€', title: 'Total Received Grants', icon: 'tabler:download' },
      { amount: '30', title: 'Researchers Involved', icon: 'tabler:users' },
      { amount: '60+', title: 'Grant Applications', icon: 'tabler:file-text' },
    ]}
  />

  


<!-- CollaborationsMap Widget *********** -->
 <CollaborationsMap
  title="Our Collaborations"
  subtitle="We work with leading institutions around the world"
  collaborations={[
    {
      name: 'University of Helsinki',
      location: 'Helsinki, Finland',
      description: 'Faculty of Medicine, Psychology Department'
    },
    {
      name: 'Max Planck Institute',
      location: 'Leipzig, Germany',
      description: 'Human Cognitive and Brain Sciences'
    },
    {
      name: 'University of Zurich',
      location: 'Zurich, Switzerland',
      description: 'Department of Economics'
    },
    // Add more collaborations
  ]}
>
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</CollaborationsMap>

  <!-- CallToAction Widget - Support Research *********** -->

  <CallToAction
    id="support"
    title="You care for Obesity and Eating Behavior? Support Our Research"
    subtitle="Your contribution helps advance our understanding of brain development and learning. Every donation directly funds cutting-edge research, equipment, and opportunities for early-career researchers."
  >
    <div slot="actions" class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <Button variant="primary" href="https://www.helsinki.fi/en/about-us/support-us" target="_blank" class="min-w-[200px]">
        <span class="flex items-center gap-3 whitespace-nowrap">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
          Make a Donation
        </span>
      </Button>

      <Button variant="secondary" href="/contact" class="min-w-[200px]">
        <span class="flex items-center gap-3 whitespace-nowrap">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Partner With Us
        </span>
      </Button>

      <Button variant="tertiary" href="https://www.helsinki.fi/en/research" target="_blank" class="min-w-[200px]">
        <span class="flex items-center gap-3 whitespace-nowrap">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Learn More
        </span>
      </Button>
    </div>
  </CallToAction>
</Layout>
