                    {groupedByYear[year].map((pub) => (
                      <article class="publication-item pb-6 border-b border-gray-200 dark:border-gray-700 last:border-0">
                        <h4 class="text-base font-medium text-gray-900 dark:text-gray-100 mb-2 leading-relaxed">
                          {pub.url || pub.doi ? (
                            <a 
                              href={pub.url || `https://doi.org/${pub.doi}`} 
                              target="_blank" 
                              rel="noopener noreferrer"
                              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                            >
                              {pub.title}
                            </a>
                          ) : (
                            pub.title
                          )}
                        </h4>
                        
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                          {pub.authors}
                        </p>
                        
                        {(pub.journal || pub.publisher) && (
                          <p class="text-sm text-gray-500 dark:text-gray-500 italic mb-2">
                            {pub.journal || pub.publisher}
                            {pub.volume && ` ${pub.volume}`}
                            {pub.issue && `(${pub.issue})`}
                            {pub.pages && `, ${pub.pages}`}
                          </p>
                        )}
                        
                        <div class="flex flex-wrap items-center gap-4 text-xs text-gray-500 dark:text-gray-500">
                          {pub.citations !== undefined && pub.citations > 0 && (
                            <span class="font-medium">ðŸ“Š {pub.citations} citations</span>
                          )}
                          {pub.doi && (
                            <a 
                              href={`https://doi.org/${pub.doi}`}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="hover:text-blue-600 dark:hover:text-blue-400"
                            >
                              DOI
                            </a>
                          )}
                        </div>
                      </article>
                    ))}
                  </div>
                </details>
              ))}
            </div>
            
            {publicationsList.length === 0 && (
              <div class="text-center text-gray-500 dark:text-gray-400 py-12">
                <p class="text-lg">No publications found.</p>
              </div>
            )}
          </div>
        </main>
        
      </div>
    </div>
  </section>

</Layout>

