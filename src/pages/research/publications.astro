---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
//import Icon from '~/components/common/Image.astro';

import { headerData } from '~/navigation';

// Import publications from JSON file (auto-updated by CI/CD)
import publicationsData from '~/data/publications.json';

const metadata = {
  title: 'Publications - O\'BRAIN Lab',
};

// Extract publications array from JSON
const publicationsList = publicationsData.publications || [];

// Calculate metrics
const totalPublications = publicationsList.length;
const totalCitations = publicationsList.reduce((sum, pub) => sum + (pub.citations || 0), 0);
const avgCitationsPerPaper = totalPublications > 0 ? (totalCitations / totalPublications).toFixed(1) : 0;

// H-index calculation
const citationsSorted = publicationsList
  .map(p => p.citations || 0)
  .sort((a, b) => b - a);
let hIndex = 0;
for (let i = 0; i < citationsSorted.length; i++) {
  if (citationsSorted[i] >= i + 1) {
    hIndex = i + 1;
  } else {
    break;
  }
}

// Group publications by year
const groupedByYear = publicationsList.reduce((acc, pub) => {
  const year = pub.year || 'Unknown';
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(pub);
  return acc;
}, {} as Record<number | string, any[]>);

const sortedYears = Object.keys(groupedByYear).sort((a, b) => Number(b) - Number(a));

// Recent publications (last 5 years)
const currentYear = new Date().getFullYear();
const recentPublications = publicationsList.filter(p => p.year >= currentYear - 5).length;

// Years active
const years = publicationsList.map(p => p.year).filter(y => y);
const firstYear = Math.min(...years);

// Journal distribution analysis
const journalCounts = publicationsList.reduce((acc, pub) => {
  const journal = pub.journal || 'Other';
  acc[journal] = (acc[journal] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

// Sort journals by count and get top journals
const sortedJournals = Object.entries(journalCounts)
  .sort(([, a], [, b]) => b - a)
  .filter(([journal]) => journal !== '' && journal !== 'Other'); // Remove empty journals and 'Other'

// Calculate percentages
const journalData = sortedJournals.map(([journal, count]) => ({
  journal,
  count,
  percentage: ((count / totalPublications) * 100).toFixed(1)
}));

// Research domain categorization based on journal names
const categorizeJournal = (journal: string): string[] => {
  const j = journal.toLowerCase();
  const domains: string[] = [];
  
  if (j.includes('neuro') || j.includes('brain') || j.includes('cognit')) domains.push('Neuroscience & Cognition');
  if (j.includes('metabol') || j.includes('nutrition') || j.includes('obesity') || j.includes('adipos') || j.includes('food') || j.includes('appetite')) domains.push('Metabolism & Nutrition');
  if (j.includes('psychiatr') || j.includes('psycho') || j.includes('behavior')) domains.push('Psychology & Behavior');
  if (j.includes('genet') || j.includes('molecular')) domains.push('Genetics & Molecular Biology');
  if (j.includes('imaging') || j.includes('neuroimage')) domains.push('Neuroimaging');
  if (j.includes('endocrin') || j.includes('diabetes')) domains.push('Endocrinology & Diabetes');
  
  return domains.length > 0 ? domains : ['General Science'];
};

// Count publications per domain (publications can belong to multiple domains)
const domainCounts = publicationsList.reduce((acc, pub) => {
  const domains = categorizeJournal(pub.journal || '');
  domains.forEach(domain => {
    acc[domain] = (acc[domain] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

const domainData = Object.entries(domainCounts)
  .sort(([, a], [, b]) => b - a)
  .map(([domain, count]) => ({
    domain,
    count,
    percentage: ((count / totalPublications) * 100).toFixed(1)
  }));
---

