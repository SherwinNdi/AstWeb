          <div class="lg:sticky lg:top-24 space-y-6">
            
            <!-- Top Journals Visualization -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
              <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Top Journals</h2>
              <div class="space-y-3">
                {journalData.slice(0, 9).map(({ journal, count, percentage }) => (
                  <div>
                    <div class="flex justify-between items-center mb-1">
                      <span class="text-sm text-gray-700 dark:text-gray-300 truncate pr-2" title={journal}>
                        {journal.length > 30 ? journal.substring(0, 30) + '...' : journal}
                      </span>
                      <span class="text-sm font-semibold text-gray-900 dark:text-white whitespace-nowrap">
                        {count} ({percentage}%)
                      </span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div 
                        class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full transition-all"
                        style={`width: ${percentage}%`}
                      ></div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Year Filter Card -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
              <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Filter by Year</h2>
              <div class="flex flex-wrap gap-2" id="yearFilters">
                <button 
                  class="year-filter-btn px-4 py-2 rounded-lg font-medium transition-all active"
                  data-year="all"
                >
                  All Years
