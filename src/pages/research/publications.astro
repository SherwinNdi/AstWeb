      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Counter animation
  function animateCounter(element: HTMLElement) {
    const target = parseFloat(element.getAttribute('data-target') || '0');
    const duration = 2000; // 2 seconds
    const increment = target / (duration / 16); // 60fps
    let current = 0;
    
    const isDecimal = target % 1 !== 0;
    
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        current = target;
        clearInterval(timer);
      }
      element.textContent = isDecimal ? current.toFixed(1) : Math.floor(current).toString();
    }, 16);
  }
  
  // Animate counters on page load
  document.addEventListener('DOMContentLoaded', () => {
    const counters = document.querySelectorAll('.counter');
    
    // Use Intersection Observer to animate when visible
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounter(entry.target as HTMLElement);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });
    
    counters.forEach(counter => observer.observe(counter));
  });
  
  // Year filtering functionality
  const filterButtons = document.querySelectorAll('.year-filter-btn');
  const yearSections = document.querySelectorAll('.year-section');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedYear = button.getAttribute('data-year');
      
      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      // Filter publications
      yearSections.forEach(section => {
        const htmlSection = section as HTMLElement;
        const sectionYear = htmlSection.getAttribute('data-year');
        
        if (selectedYear === 'all') {
          htmlSection.style.display = 'block';
          // Open all sections when "All Years" is selected
          htmlSection.setAttribute('open', '');
        } else if (sectionYear === selectedYear) {
          htmlSection.style.display = 'block';
          // Open the selected year section
          htmlSection.setAttribute('open', '');
        } else {
          htmlSection.style.display = 'none';
        }
      });
    });
  });
</script>

<script is:inline define:vars={{ domainData }}>
  // Research Domains Donut Chart
  document.addEventListener('DOMContentLoaded', () => {
    const ctx = document.getElementById('domainChart');
    if (!ctx || typeof Chart === 'undefined') return;
    
    // Check for dark mode
    const isDark = document.documentElement.classList.contains('dark');
    
    // Color palette for domains
    const colors = [
      'rgba(59, 130, 246, 0.8)',   // Blue
      'rgba(16, 185, 129, 0.8)',   // Green
      'rgba(139, 92, 246, 0.8)',   // Purple
      'rgba(245, 158, 11, 0.8)',   // Orange
      'rgba(236, 72, 153, 0.8)',   // Pink
      'rgba(20, 184, 166, 0.8)',   // Teal
      'rgba(239, 68, 68, 0.8)',    // Red
    ];
    
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: domainData.map(d => d.domain),
        datasets: [{
          data: domainData.map(d => d.count),
          backgroundColor: colors.slice(0, domainData.length),
          borderWidth: 2,
          borderColor: isDark ? '#1f2937' : '#ffffff',
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: {
            display: false
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                const label = context.label || '';
                const value = context.parsed || 0;
                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                const percentage = ((value / total) * 100).toFixed(1);
                return `${label}: ${value} (${percentage}%)`;
              }
            }
          }
        }
      }
    });
  });
</script>
