---
import Layout from '~/layouts/PageLayout.astro';
import TeamMembers from '~/components/widgets/TeamMembers.astro';
import Hero from '~/components/widgets/Hero.astro';
import teamData from '~/data/team.json';
import type { TeamMember } from '~/types';

const metadata = {
  title: 'Our Team - Lab Members',
  description: 'Meet our talented team of researchers, PhD candidates, postdocs, and students.',
};

// Type assertion to handle JSON import
const members = teamData.members as unknown as TeamMember[];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Our Team"
    title="Meet Our Research Team"
  >
    <Fragment slot="subtitle">
      Our diverse team of researchers, clinicians, and students work together to advance our understanding 
      of neuroscience and human behavior. Each member brings unique expertise and passion to our collaborative environment.
    </Fragment>
  </Hero>

  <!-- Team Members Section -->
  <TeamMembers
    title="Team Members"
    subtitle="Explore our team by category or browse all members"
    members={members}
    columns={4}
  />
</Layout>
