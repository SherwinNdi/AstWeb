<script>
  // Handle share button clicks to copy link to clipboard
  function initializeShareButtons() {
    const shareButtons = document.querySelectorAll('.share-button');
    
    shareButtons.forEach(button => {
      button.addEventListener('click', async () => {
        // Get the study ID from the button
        const studyId = button.getAttribute('data-study-id');
        const studyUrl = `${window.location.origin}${window.location.pathname}#${studyId}`;
        
        console.log('Copying URL:', studyUrl); // Debug log
        
        try {
          // Copy to clipboard using modern API
          await navigator.clipboard.writeText(studyUrl);
          
          // Show success notification
          showToast('‚úì Link copied to clipboard!');
        } catch (err) {
          console.log('Clipboard API failed, using fallback'); // Debug log
          
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = studyUrl;
          textArea.style.position = 'fixed';
          textArea.style.left = '-999999px';
          textArea.style.top = '0';
          document.body.appendChild(textArea);
          textArea.focus();
          textArea.select();
          
          try {
            const successful = document.execCommand('copy');
            if (successful) {
              showToast('‚úì Link copied to clipboard!');
            } else {
              showToast('‚ùå Failed to copy link', 'error');
            }
          } catch (err) {
            console.error('Copy failed:', err);
            showToast('‚ùå Failed to copy link', 'error');
          }
          
          document.body.removeChild(textArea);
        }
      });
    });
  }

  function showToast(message, type = 'success') {
    console.log('Showing toast:', message); // Debug log
    
    // Remove any existing toasts
    const existingToast = document.querySelector('.toast');
    if (existingToast) {
      existingToast.remove();
    }

    // Create toast element
    const toast = document.createElement('div');
    toast.className = 'toast';
    
    // Inline styles for guaranteed visibility
    toast.style.cssText = `
      position: fixed !important;
      bottom: 2rem !important;
      right: 2rem !important;
      padding: 1rem 1.5rem !important;
      background: ${type === 'error' ? '#ef4444' : '#10b981'} !important;
      color: white !important;
      border-radius: 0.5rem !important;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3) !important;
      display: flex !important;
      align-items: center !important;
      gap: 0.75rem !important;
      font-weight: 600 !important;
      font-size: 0.875rem !important;
      z-index: 999999 !important;
      animation: slideIn 0.3s ease-out !important;
      min-width: 250px !important;
    `;
    
    toast.innerHTML = `
      <svg style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
      <span>${message}</span>
    `;

    // Add to page
    document.body.appendChild(toast);
    
    console.log('Toast added to body', toast); // Debug log

    // Auto-remove after 3 seconds
    setTimeout(() => {
      toast.style.animation = 'fadeOut 0.3s ease-out forwards';
      setTimeout(() => {
        if (toast.parentNode) {
          toast.remove();
        }
      }, 300);
    }, 3000);
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeShareButtons);
  } else {
    initializeShareButtons();
  }
  
  // Re-initialize for Astro view transitions
  document.addEventListener('astro:page-load', initializeShareButtons);
</script>
