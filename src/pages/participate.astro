    </div>
  </section>

  <!-- Projects Section with Golden Ratio Layout -->
  <section class="py-8 md:py-10 bg-blue-50 dark:bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      {projects.map((project, projectIndex) => (
        <article class="mb-12 scroll-mt-20" id={project.id}>
          <!-- Project Header: Horizontal Info Bar -->
          <div class="mb-6">
            <!-- Single Merged Box -->
            <div class="rounded-lg shadow-[0_4px_30px_rgba(0,0,0,0.1)] dark:shadow-[0_4px_30px_rgba(0,0,0,0.1)] backdrop-blur border border-[#ffffff29] bg-white dark:bg-slate-900 p-6">
