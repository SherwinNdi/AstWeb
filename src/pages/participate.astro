---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';

// Import participate data
import participateData from '~/data/participate.json';

const metadata = {
  title: 'Participate in Our Research - O\'BRAIN Lab',
};

const projects = participateData.projects || [];

// Simple Markdown parser for bold and links
function parseMarkdown(text) {
  if (!text) return text;
  
  // Split by double newlines to create paragraphs
  const paragraphs = text.split(/\n\n+/);
  
  return paragraphs.map(para => {
    const parsed = para
      // Bold: **text** or __text__
      .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
      .replace(/__(.+?)__/g, '<strong>$1</strong>')
      // Italic: *text* or _text_ (but not if it's part of bold)
      .replace(/(?<!\*)\*([^*]+?)\*(?!\*)/g, '<em>$1</em>')
      .replace(/(?<!_)_([^_]+?)_(?!_)/g, '<em>$1</em>')
      // Links: [text](url)
      .replace(/\[(.+?)\]\((.+?)\)/g, '<a href="$2" target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 underline hover:text-blue-700 dark:hover:text-blue-300">$1</a>')
      // Single newlines become <br>
      .replace(/\n/g, '<br>');
    
    return parsed;
  }).join('</p><p class="text-base text-gray-600 dark:text-gray-300 leading-relaxed text-justify mt-4">');
}
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      showToggleTheme
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <section class="py-8 md:py-10 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold font-heading mb-4 text-gray-900 dark:text-white">
          Participate in <span class="text-blue-600 dark:text-blue-400">Our Research</span>
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
          Explore opportunities to participate in ongoing research from our lab. Your contribution helps advance our understanding of the brain, cognition, and health. If interested, follow the links or contact the responsible researchers directly for more details.
        </p>
      </div>
    </div>
  </section>

  <!-- Studies Showcase Section -->
  <section class="py-8 md:py-10 bg-blue-50 dark:bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3">
          Active Research Studies
        </h2>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Click on any study to learn more about participation requirements and how to apply
        </p>
      </div>

      <!-- Studies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.flatMap((project) => 
          project.studies.map((study) => (
            <a
              href={`#${study.id}`}
              class="group flex flex-col rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 hover:shadow-lg transition-all duration-300 overflow-hidden"
            >
              <!-- Simple Header -->
              <div class="p-6 border-b border-gray-100 dark:border-gray-800">
                <div class="flex items-start justify-between gap-3 mb-3">
                  <div class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    {project.title}
                  </div>
                  {study.status === 'recruiting' && (
                    <span class="px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-medium rounded">
                      Recruiting
                    </span>
                  )}
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {study.title}
                </h3>
                {study.subtitle && (
                  <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                    {study.subtitle}
                  </p>
                )}
              </div>

              {/* Minimal Content */}
              <div class="flex-grow p-6 space-y-3">
                {/* Location */}
