                <p class="text-base text-gray-600 dark:text-gray-300 leading-relaxed text-justify" set:html={parseMarkdown(project.description)}>
                </p>
                {project.projectDetails && project.projectDetails.length > 0 && (
                  <div class="mt-4">
                    <p class="text-base text-gray-600 dark:text-gray-300 leading-relaxed mb-2">The project has two parts:</p>
                    <ul class="space-y-2 ml-4">
                      {project.projectDetails.map((detail) => (
                        <li class="flex items-start gap-2">
                          <span class="text-blue-600 dark:text-blue-400 font-bold mt-1">‚Ä¢</span>
                          <span class="text-base text-gray-600 dark:text-gray-300 leading-relaxed text-justify">{detail}</span>
                        </li>
                      ))}
                    </ul>
