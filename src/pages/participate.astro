                  <div class="flex items-start justify-between gap-4">
                    <div class="flex-1">
                      <h3 class="text-2xl font-bold text-white mb-2">
                        Study {studyIndex + 1}: {study.title}
                      </h3>
                      {study.subtitle && (
                        <p class="text-blue-100 text-lg">
                          {study.subtitle}
                        </p>
