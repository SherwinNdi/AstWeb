                {/* Study Content with Golden Ratio */}
                <div class="p-6 pr-8">
                  <div class="grid grid-cols-1 lg:grid-cols-[61.8%_1fr] gap-6">
                    {/* Left: Main Content (61.8%) */}
                    <div class="space-y-4">
                      {/* Description */}
                      <div>
                        <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-lg text-justify" set:html={parseMarkdown(study.description)}>
                        </p>
                        {study.note && (
                          <p class="mt-3 text-sm text-gray-500 dark:text-gray-400 italic">
                            {study.note}
                          </p>
